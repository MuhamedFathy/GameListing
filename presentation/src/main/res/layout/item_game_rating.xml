<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingVertical="4dp">

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/gameRatingTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/maven_pro_regular"
    android:textColor="?colorOnSecondary"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="ðŸŽ¯ Exceptional" />

  <com.google.android.material.progressindicator.LinearProgressIndicator
    android:id="@+id/gameRatingProgress"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:indeterminate="false"
    android:max="100"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/gameRatingTitle"
    app:trackColor="@color/trans_black"
    app:trackThickness="10dp"
    tools:indicatorColor="@color/rating_exceptional"
    tools:progress="40" />
</androidx.constraintlayout.widget.ConstraintLayout>